export EDITOR=vi
export HELM_HOME=/home/foundry/.helm
export ETCDCTL_API=3

alias onosf='ssh-keygen -f "/home/foundry/.ssh/known_hosts" -R [10.64.1.124]:31101; ssh -p 31101 -o StrictHostKeyChecking=no karaf@10.64.1.124'
alias onosv='ssh-keygen -f "/home/foundry/.ssh/known_hosts" -R [10.64.1.124]:30115; ssh -p 30115 -o StrictHostKeyChecking=no karaf@10.64.1.124'
alias vcli='ssh-keygen -f "/home/foundry/.ssh/known_hosts" -R [10.64.1.124]:30110; ssh -p 30110 -o StrictHostKeyChecking=no voltha@10.64.1.124'
alias kgp='kubectl get pods --all-namespaces -o wide'

kol ()
{
    pod=$(kubectl get pods -n voltha |grep onos |grep Running | awk '{print $1}');
    kubectl logs $pod -n voltha $@
}
kvl ()
{
    pod=$(kubectl get pods -n voltha |grep vcore |grep Running | awk '{print $1}');
    kubectl logs $pod -n voltha $@
}

